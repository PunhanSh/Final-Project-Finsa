@model Project
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="container">
        <div class="row justify-content-center my-4">
            @{
                if (TempData["ProjectError"] != null)
                {
                    <p style="font-size: 20px !important;" class="alert alert-danger col-lg-10 text-center">@TempData["ProjectError"]</p>

                    TempData["ProjectError"] = null;
                }
            }
            <div class="col-lg-10 m-5">
                <div class="card text-center">
                    <div class="card-header">
                        <span style="font-size: 30px !important;" class="font-weight-bold text-facebook">Content Information</span>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-light p-5" style="color: #ff4a17 !important;font-size:18px">@Model.Description</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-10 p-3">
                <p class="text-facebook" style="text-align: center !important; font-size: 40px !important; font-weight: 600 !important;">Project</p>
                <div class="d-flex p-3 shadow-sm" style="border-radius: 10px !important;">
                    <img class="col-lg-3 w-25" src="~/Uploads/@(Model.MainImage==null?"default-avatar.png":Model.MainImage)" alt="Image" />
                    <div class="d-flex flex-column justify-content-center col-lg-9">
                        <h2 style="margin-bottom:20px">@Model.Name</h2>
                        <p style="font-size:20px">Client - @Model.ClientsName</p>
                        <p style="font-size:20px">Created Date - @Model.CreatedDate</p>
                        <p style="font-size:20px">Project Images - @foreach (var item in Model.ProjectImages)
                                                                    {
                                                                        <img style="width: 100px;" src="~/Uploads/@item.Image" />
                                                                    }</p>
                        <a class="btn btn-warning" style="margin-top: 20px;margin-bottom: 100px;" asp-area="admin" asp-controller="Project" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

