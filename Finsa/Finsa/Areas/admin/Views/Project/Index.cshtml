@model List<Project>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Project" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Main Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">ClientsName</th>
                        <th scope="col">Description</th>
                        <th scope="col">Filter</th>
                        <th scope="col">Created Date</th>
                    </tr>
                </thead>
                <tbody style="height: 107px;">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td><img src="~/Uploads/@Model[i].MainImage" style="width: 100px" alt="Alternate Text" /></td>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].ClientsName</td>
                        <td>@Html.Raw(Model[i].Description != null && Model[i].Description.Length > 20 ? Model[i].Description.Substring(0, 20) + "..." : Model[i].Description)</td>
                        <td>@Model[i].Filter</td>
                        <td>@Model[i].CreatedDate</td>
                        <td>
                            <a style="display: block;margin-bottom: 5px;" class="btn btn-success mb-1" asp-area="admin" asp-controller="Project" asp-action="Update" asp-route-id="@Model[i].Id">Update</a>
                            <a class="btn btn-warning" style="margin-bottom: 5px; padding: 6px 16px; display: block;" asp-area="admin" asp-controller="Project" asp-action="Detail" asp-route-id="@Model[i].Id">Detail</a>

                            <a style="display: block; margin-top: 5px;" class="btn btn-danger" asp-area="admin" asp-controller="Project" asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>