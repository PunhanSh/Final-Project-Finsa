@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-warning mb-3" asp-area="admin" asp-controller="Contact" asp-action="SendMailAll">Send All Mail</a>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FullName</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Message</th>
                        <th scope="col">CreatedDate</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                     {
                         <tr>
                             <th scope="row">@(i+1)</th>
                             <td>@Model[i].FullName</td>
                             <td>@Model[i].Mail</td>
                             <td>@Model[i].Phone</td>
                             <td>@(Model[i].Message != null && Model[i].Message.Length > 20 ? Model[i].Message.Substring(0, 20) + "..." : Model[i].Message)</td>
                             <td>@Model[i].CreatedDate</td>
                             <td>
                                 <a class="btn btn-warning mb-3" asp-area="admin" asp-controller="Contact" asp-action="SendMail" asp-route-id="@Model[i].Id">Send Mail</a>
                                 <a class="btn btn-danger" asp-area="admin" asp-controller="Contact" asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return confirm('Are you sure?')">Delete</a>
                             </td>
                         </tr>  
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

