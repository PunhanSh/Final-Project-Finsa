@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-warning mb-3" asp-area="admin" asp-controller="Contact" asp-action="SendMailAll">Send All Mail</a>
            <div class="col-lg-12">
                <table class="table">
                    <thead style="border-bottom: 2px solid;">
                        <tr>
                            <th style="text-align: center;" scope="col">#</th>
                            <th style="text-align: center;" scope="col">FullName</th>
                            <th style="text-align: center;" scope="col">Email</th>
                            <th style="text-align: center;" scope="col">Phone</th>
                            <th style="text-align: center;" scope="col">Message</th>
                            <th style="text-align: center;" scope="col">CreatedDate</th>
                            <th style="text-align: center;" scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <th style="text-align: center;" scope="row">@(i+1)</th>
                                <td style="text-align: center;">@Model[i].FullName</td>
                                <td style="text-align: center;">@Model[i].Mail</td>
                                <td style="text-align: center;">@Model[i].Phone</td>
                                <td style="text-align: center;">@(Model[i].Message != null && Model[i].Message.Length > 20 ? Model[i].Message.Substring(0, 20) + "..." : Model[i].Message)</td>
                                <td style="text-align: center;">@Model[i].CreatedDate</td>
                                <td style="text-align: center;">
                                    <a class="btn btn-warning mb-3" asp-area="admin" asp-controller="Contact" asp-action="SendMail" asp-route-id="@Model[i].Id">Send Mail</a>
                                    <a class="btn btn-danger" asp-area="admin" asp-controller="Contact" asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

