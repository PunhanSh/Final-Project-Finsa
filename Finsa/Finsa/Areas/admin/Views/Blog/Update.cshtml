@model Blog
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @{
            if (TempData["Erroor"] != null)
            {
                <div class="col-lg-12 alert alert-danger">
                    <p>@(TempData["Erroor"]as string)</p>
                </div>
                TempData["Erroor"] = null;
            }
        }
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Blog" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.ImageFile">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Name">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Description</label>
                    <textarea class="form-control ckeditor" asp-for="@Model.Description"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CreatedDate">CreatedDate</label>
                    <input class="form-control" asp-for="@Model.CreatedDate">
                    <span asp-validation-for="@Model.CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.TeamId" class="selectTag">Team Name:</label>
                    <select class="js-example-basic-multiple-limit" asp-for="@Model.TeamId" style="width:100%" multiple="multiple">
                        @foreach (var item in ViewBag.Team)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.Team.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.TagsId" class="selectTag">Tag Name:</label>
                    <select class="js-example-basic-multiple" asp-for="@Model.TagsId" style="width:100%" multiple="multiple">
                        @foreach (var item in ViewBag.Tag)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.Team.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CategoriesId" class="selectTag">Category Name:</label>
                    <select class="js-example-basic-multiple" asp-for="@Model.CategoriesId" style="width:100%" multiple="multiple">
                        @foreach (var item in ViewBag.Category)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <button type="submit" class="btn btn-success">Update</button>
                <button type="submit" class="btn btn-dark" asp-area="admin" asp-controller="Blog" asp-action="Index">Back to List</button>
            </form>
        </div>
    </div>
</div>