@model CustomUser
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @{
            if (TempData["Erroor"] != null)
            {
                <div class="col-lg-12 alert alert-danger">
                    <p>@(TempData["Erroor"]as string)</p>
                </div>
                TempData["Erroor"] = null;
            }
        }
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="CustomUser" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.ImageFile">Image</label>
                    <img style="width: 100px" src="~/Uploads/@Model.Image" alt="Alternate Text" />
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <input type="hidden" class="form-control" asp-for="@Model.Image">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Name">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">Email</label>
                    <input class="form-control" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    <input class="form-control" type="hidden" asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.RoleId" class="text-danger"></span>
                    <label asp-for="@Model.RoleId" class="selectTag">Select Role:</label>
                    <select class="js-example-basic-multiple" asp-for="@Model.RoleId" style="width:100%">
                        @foreach (var item in ViewBag.Role)
                         {
                            <option style="display: block;" value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-success">Update</button>
                <button type="submit" class="btn btn-dark" asp-area="admin" asp-controller="CustomUser" asp-action="Index">Back to List</button>
            </form>
        </div>
    </div>
</div>