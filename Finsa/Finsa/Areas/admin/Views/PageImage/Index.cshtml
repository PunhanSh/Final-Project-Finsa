@model List<PageImage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="PageImage" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table" style="text-align: center;">
                <thead>
                    <tr>
                        <th scope="col" style="width: 50px;">#</th>
                        <th scope="col" style="width: 150px;">Image</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody style="height: 107px;">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th scope="row">@(i+1)</th>
                            <td><img src="~/Uploads/@Model[i].Image" style="width: 100px" alt="Alternate Text" /></td>
                            <td>
                                <a class="btn btn-success mb-1" asp-area="admin" asp-controller="PageImage" asp-action="Update" asp-route-id="@Model[i].Id">Update</a>
                                <a class="btn btn-danger" asp-area="admin" asp-controller="PageImage" asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
                </table>
        </div>
    </div>
</div>