@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Service" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody style="height: 107px;">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th scope="row">@(i+1)</th>
                            <td><img src="~/Uploads/@Model[i].Image" style="width: 100px" alt="Alternate Text" /></td>
                            <td>@Model[i].Name</td>
                            <td>@(Model[i].Description != null && Model[i].Description.Length > 30 ? Model[i].Description.Substring(0, 30) + "..." : Model[i].Description)</td>
                            <td>
                                <a class="btn btn-success mb-1" style="display: block;margin-bottom: 5px;" asp-area="admin" asp-controller="Service" asp-action="Update" asp-route-id="@Model[i].Id">Update</a>
                                <a class="btn btn-warning" style="margin-bottom: 5px; padding: 6px 16px; display: block;" asp-area="admin" asp-controller="Service" asp-action="Detail" asp-route-id="@Model[i].Id">Detail</a>
                                <a class="btn btn-danger" style="display: block;" asp-area="admin" asp-controller="Service" asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>