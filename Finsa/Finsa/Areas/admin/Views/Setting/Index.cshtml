@model Setting
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
        </div>
        <div class="col-lg-12">
            <table class="table" style="text-align: center;">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Logo</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">CopyrightLink</th>
                        <th scope="col">Map</th>
                        <th scope="col">ContactText</th>
                        <th scope="col">FAQText</th>
                        <th scope="col">VideoLink</th>
                        <th scope="col">VideoLink2</th>
                        <th scope="col">ServiceVideo</th>
                    </tr>
                </thead>
                <tbody style="height: 107px;">
                    <tr>
                        <th scope="row"></th>
                        <td><img src="~/Uploads/@Model.Logo" style="width: 100px" alt="Alternate Text" /></td>
                        <td>@Model.Phone</td>
                        <td>@Model.Mail</td>
                        <td>@Model.Address</td>
                        <td>@Model.CopyrightLink</td>
                        <td>@(Model.Map != null && Model.Map.Length > 10 ? Model.Map.Substring(0, 10) + "..." : Model.Map)</td>
                        @*<td>@Html.Raw(Model.AboutUs)</td>*@
                        <td>@(Model.ContactText != null && Model.ContactText.Length > 10 ? Model.ContactText.Substring(0, 10) + "..." : Model.ContactText)</td>
                        <td>@(Model.FAQText != null && Model.FAQText.Length > 10 ? Model.FAQText.Substring(0, 10) + "..." : Model.FAQText)</td>
                        <td>@Model.VideoLink</td>
                        <td>@Model.VideoLink2</td>
                        <td>@Model.ServiceVideo</td>
                        <td>
                            <a class="btn btn-success" asp-area="admin" asp-controller="Setting" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                           
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>