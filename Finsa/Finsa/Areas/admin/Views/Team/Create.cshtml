@model Team
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @{
            if (TempData["Erroor"] != null)
            {
                <div class="col-lg-12 alert alert-danger">
                    <p>@(TempData["Erroor"]as string)</p>
                </div>
                TempData["Erroor"] = null;
            }
        }
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Team" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.ImageFile">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Name">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Profession">Profession</label>
                    <input class="form-control" asp-for="@Model.Profession">
                    <span asp-validation-for="@Model.Profession" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Description</label>
                    <input class="form-control" asp-for="@Model.Description">
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Phone">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone">
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Mail">Mail</label>
                    <input class="form-control" asp-for="@Model.Mail">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Address">Address</label>
                    <input class="form-control" asp-for="@Model.Address">
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.SkillsId" class="selectTag">Select Skills:</label>
                    <select class="js-example-basic-multiple" asp-for="@Model.SkillsId" style="width:100%" multiple="multiple">
                        @foreach (var item in ViewBag.Skill)
                        {
                            <option style="display: block;" value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                <button type="submit" class="btn btn-dark" asp-area="admin" asp-controller="Team" asp-action="Index">Back to List</button>
            </form>
        </div>
    </div>
</div>