@model ProjectImage
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @{ 
            if (TempData["Erroor"] != null)
            {
                <div class="col-lg-12 alert alert-danger">
                    <p>@(TempData["Erroor"]as string)</p>
                </div>
                TempData["Erroor"] = null;
            }
        }
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="ProjectImage" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.ImageFile">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ProjectId" class="selectTag">Select Project:</label>
                    <select class="js-example-basic-multiple-limit" asp-for="@Model.ProjectId" style="width:100%" multiple="multiple">
                        @foreach (var item in ViewBag.Projects)
                        {
                            <option style="display: block;" value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.Project.Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                <button type="submit" class="btn btn-dark" asp-area="admin" asp-controller="ProjectImage" asp-action="Index">Back to List</button>
            </form>
        </div>
    </div>
</div>