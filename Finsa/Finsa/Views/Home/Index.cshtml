<section id="ourteams">
    <div class="container">
        <div class="section-head">
            <span>Meet Our Advisors</span>
            <h2>
                We Have An Exclusive
                <br>
                Team Member
            </h2>
        </div>
        <div class="row">
            @foreach (var item in Model.Teams)
            {
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="u-fade-type-down js-scroll-trigger">
                        <div class="teammember">
                            <div class="member-image-wrap">
                                <div class="member-image">
                                    <img src="~/Uploads/@item.Image" alt="">
                                    <div class="team-social">
                                        @foreach (var social in item.TeamSocials)
                                        {
                                            <a href="@social.Link"><i class="@social.Icon"></i></a>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="member-text">
                                <h3><a asp-controller="Team" asp-action="Detail" asp-route-id="@item.Id">@item.Name</a></h3>
                                <span>@item.Profession</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<div class="u-fade-type-down js-scroll-trigger">
    <section id="testimonial">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-6">
                    <div class="section-head">
                        <span>Meet Our Advisors</span>
                        <h2>
                            We Have An Exclusive
                            <br>
                            Team Member
                        </h2>
                    </div>
                    <div class="owl-carousel testimonial-slider owl-theme">
                        @foreach (var item in Model.AboutSliders)
                        {
                            <div class="item">
                                <div class="section-content">
                                    <p>
                                        <span class="quote-top">
                                            <i class="fas fa-quote-left"></i>
                                        </span>
                                        @item.Content
                                        <span class="quote-bottom">
                                            <i class="fas fa-quote-right"></i>
                                        </span>
                                    </p>
                                </div>
                                <div class="section-author">
                                    <div class="author-image">
                                        <a asp-controller="Team" asp-action="Detail" asp-route-id="@item.Team.Id"><img src="~/Uploads/@item.Team.Image" alt=""></a>
                                    </div>
                                    <div class="author-desc">
                                        <a style="text-decoration: none;" asp-controller="Team" asp-action="Detail" asp-route-id="@item.Team.Id"><h4>@item.Team.Name</h4></a>
                                        <span>@item.Team.Profession</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="testimonial-image">
            <img src="~/assets/img/testimonial.png" alt="">
        </div>
        <div class="testimonial-shape">
            <img src="~/assets/img/06.png" alt="">
        </div>
    </section>
</div>
<div class="u-fade-type-down js-scroll-trigger">
    <section id="featuredby" class="featured-1">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 col-md-12">
                    <div class="owl-carousel featuredbyslider owl-theme">
                        @foreach (var item in Model.Partners)
                        {
                            <div class="item img-fluid">
                                <img src="~/Uploads/@item.Image" alt="">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<section id="latestblog">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 col-md-6 col-10 col-tiny-12">
                <div class="latest-head">
                    <span>Important Articles</span>
                    <h2>
                        Something Know Our
                        <br>
                        Latest News & Blog
                    </h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-10 col-tiny-12">
                <div class="button-div">
                    <a asp-controller="Blog" asp-action="Index" class="my-btn">View All Blogs</a>
                </div>
            </div>
        </div>
        <div class="row blog-cards mt-50 justify-content-center">
            @foreach (var item in Model.Blogs)
             {
             <div class="col-lg-4 col-md-6 col-10 col-tiny-12">
                <div class="u-fade-type-down js-scroll-trigger">
                    <div class="blog-card">
                        <div class="blog-head">
                            <div class="blog-image" style="background-image: url('Uploads/@item.Image');"></div>
                        </div>
                        <div class="blog-footer">
                            <span>
                                <i class="far fa-calendar-alt"></i>
                                @item.CreatedDate.ToString("dd MMM yyyy")
                            </span>
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id"><h3>@item.Name</h3></a>
                            <p>Power of choice is untrammelled and when nothing prevents beings able to do what we like best</p>
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                                Learn More
                                <i class="far fa-long-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
             </div>
             }
        </div>
    </div>
</section>