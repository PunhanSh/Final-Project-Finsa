<section id="company-services">
    <div class="container">
        <div class="services-title">
            <span>Company Services</span>
            <h2>
                We Provide Most Exclusive
                <br>
                Service For Business
            </h2>
        </div>
        <div class="u-fade-type-down js-scroll-trigger">
            <div class="row service-cards">
                @foreach (var item in Model.Services)
                {
                    <div class="col-lg-4 col-md-6 col-sm-8">
                        <div class="service-card">
                            <div class="card-icon">
                                <img src="~/Uploads/@item.Image" alt="">
                            </div>
                            <h3>
                                <a asp-controller="Service" asp-action="Detail" asp-route-id="@item.Id">@item.Name</a>
                            </h3>
                            <p>
                                @(item.Description != null && item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                            </p>
                            <a asp-controller="Service" asp-action="Detail" asp-route-id="@item.Id">
                                <i class="fal fa-long-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
    <div class="services-image">
        <img src="~/assets/img/07.png" alt="">
    </div>
</section>
<section id="exclusive-video" style="background-image: url(assets/img/video-1.jpg);">
