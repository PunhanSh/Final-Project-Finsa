@model VmFAQ
@{
    ViewData["Title"] = "Index";
}
@*Banner Section*@

<section id="uni-banner" style="background-image: url('../../Uploads/@Model.Banner.Image');">
    <div class="container">
        <div class="banner-text">
            <h1>FAQ</h1>
            <ul>
                <li>
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    FAQ
                </li>
            </ul>
        </div>
    </div>
    <div class="banner-shapes">
        <div class="shape-one"></div>
        <div class="shape-two"></div>
        <div class="shape-three"></div>
    </div>
</section>
<section id="faq-accordion">
    <div class="container">
        <div class="row section-head">
            <div class="col-lg-6">
                <div class="section-left">
                    <span>FAQ</span>
                    <h2>Frequently Asked Questions</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <p>@Model.Setting.FAQText</p>
            </div>

            @*FAQ accordions*@
            <div class="gettoknow-accordion">
                <ul>
                    @foreach (var item in Model.FAQs)
                    {
                        <li><a href="">@item.AccordionHead<i class="fal fa-plus"></i></a><p>@item.AccordionTitle</p></li>
                    }

                </ul>
            </div>
        </div>
    </div>
</section>
<section id="dropmessage">
    <div class="u-fade-type-right js-scroll-trigger">
        <div class="container">
            <div class="row justify-content-end">
                @{
                    if (TempData["Erroor"] != null)
                    {
                        <div class="col-lg-8 alert alert-danger">
                            <p>@(TempData["Erroor"]as string)</p>
                        </div>
                        TempData["Erroor"] = null;
                    }
                }
                <div class="col-lg-8">
                    <div class="contact-content">
                        <div class="contact-head">
                            <span>Drop A Message</span>
                            <h2>Don't Hesited To Contact Us</h2>
                        </div>

                        @*FAQ Send Message Action*@
                        <form asp-controller="FAQ" asp-action="SendMessage" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <input type="text" asp-for="@Model.Contact.FullName" placeholder="Your Full Name">
                                        <span class="icon">
                                            <i class="far fa-user-circle"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <input type="email" asp-for="@Model.Contact.Mail" placeholder="Your Email Address">
                                        <span class="icon">
                                            <i class="far fa-envelope-open"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-group textarea">
                                        <textarea placeholder="Write Message" asp-for="@Model.Contact.Message"></textarea>
                                        <span class="icon">
                                            <i class="far fa-pencil"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="my-btn">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="u-fade-type-left js-scroll-trigger">
        <div class="section-img" style="left: -5%;">
            <img src="~/assets/img/Contact/man-with-earth.png" alt="">
        </div>
    </div>

</section>

@*Partners section*@

<div class="u-fade-type-down js-scroll-trigger">
    <section id="featuredby" class="featured-1">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 col-md-12">
                    <div class="owl-carousel featuredbyslider owl-theme">
                        @foreach (var item in Model.Partners)
                        {
                            <div class="item img-fluid">
                                <img src="~/Uploads/@item.Image" alt="">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>