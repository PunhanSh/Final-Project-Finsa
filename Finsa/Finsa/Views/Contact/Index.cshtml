@model VmContact
@{
    ViewData["Title"] = "Index";
}

@*Banner Section*@
<section id="uni-banner" style="background-image: url('../../Uploads/@Model.Banner.Image');">
    <div class="container">
        <div class="banner-text">
            <h1>Contact Us</h1>
            <ul>
                <li>
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    Contact Us
                </li>
            </ul>
        </div>
    </div>
    <div class="banner-shapes">
        <div class="shape-one"></div>
        <div class="shape-two"></div>
        <div class="shape-three"></div>
    </div>
</section>

@*Contact Section*@

<section id="contact-touch">
    <div class="container">
        <div class="contact-info">
            <div class="row justify-content-center">
                <div class="col-lg-6 order-2 order-lg-1">
                    <div class="u-fade-type-left js-scroll-trigger">
                        <div class="contact-img text-center">
                            <img src="~/assets/img/Contact/man-with-earth-02.png" alt="">
                        </div>
                    </div>

                </div>
                <div class="col-lg-6 col-md-10 order-1 order-lg-2">
                    <div class="u-fade-type-right js-scroll-trigger">
                        <div class="contact-content">
                            <div class="section-head">
                                <span>Get In Touch</span>
                                <h2>Need Any Help For Business & Consulting</h2>
                            </div>
                            <p>@Model.Setting.ContactText</p>
                            <ul>
                                <li class="phone">
                                    <a href="tel:@Model.Setting.Phone">
                                        <i class="far fa-phone"></i>
                                        @Model.Setting.Phone
                                    </a>
                                </li>
                                <li>
                                    <i class="far fa-envelope-open"></i>
                                    <a href="">@Model.Setting.Mail</a>
                                </li>
                                <li>
                                    <i class="far fa-map-marker-alt"></i>
                                    @Model.Setting.Address
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="u-fade-type-down js-scroll-trigger">
            <div class="contact-form">
                <div class="row justify-content-center">
                    @{
                        if (TempData["Erroor"] != null)
                        {
                            <div class="col-lg-12 alert alert-danger">
                                <p>@(TempData["Erroor"]as string)</p>
                            </div>
                            TempData["Erroor"] = null;
                        }
                    }
                    <div class="col-10">
                        <div class="form-head">
                            <h2>Don’t Hesited To Contact Us</h2>
                        </div>

                        @*Contact Send Message*@

                        <form asp-controller="Contact" asp-action="SendMessage" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="input-div">
                                        <input placeholder="Your Full Name" type="text" asp-for="@Model.Contact.FullName">
                                        <span class="input-icon">
                                            <i class="far fa-user-circle"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="input-div">
                                        <input type="email" placeholder="Your Email Address" asp-for="@Model.Contact.Mail">
                                        <span class="input-icon">
                                            <i class="far fa-envelope-open"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="input-div">
                                        <input type="text" placeholder="Your Phone" asp-for="@Model.Contact.Phone">
                                        <span class="input-icon">
                                            <i class="far fa-phone"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="input-div">
                                        <textarea cols="30" rows="10" placeholder="Write Message" asp-for="@Model.Contact.Message"></textarea>
                                        <span class="input-icon">
                                            <i class="far fa-pencil"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-12 text-center">
                                    <button class="my-btn" id="submitBtn" type="submit">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @*Contact Map section*@

    <div class="container-fluid container-1600">
        <div class="contact-map">
            <iframe src="@Model.Setting.Map" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</section>

@*Partners section*@

<div class="u-fade-type-down js-scroll-trigger">
    <section id="featuredby" class="featured-1">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 col-md-12">
                    <div class="owl-carousel featuredbyslider owl-theme">
                        @foreach (var item in Model.Partners)
                        {
                            <div class="item img-fluid">
                                <img src="~/Uploads/@item.Image" alt="">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>