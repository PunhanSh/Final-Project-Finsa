@model VmLayout

@*Active Controller adi*@

@{
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*Bootstrap*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    @*Google Fonts*@
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,600;1,700;1,800;1,900&family=Source+Sans+Pro:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700;1,900&display=swap" rel="stylesheet">
    @*Font Awesome*@
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-xVVam1KS4+Qt2OrFa+VdRUoXygyKIuNWUUUBZYv+n27STsJ7oDOHJgfF0bNKLMJF" crossorigin="anonymous">
    <link href="~/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    @*Video Popup*@
    <link rel="stylesheet" href="~/assets/css/grt-youtube-popup.css">
    @*Fade In, out Link*@
    <link href="~/assets/fade-in-scroll-load/css/common.css" rel="stylesheet" />
    @*Owl Carousel Plugin*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    @*Main CSS*@
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/custom.css">
    @*Page Name*@
    <title> Finsa - Consulting & Agency Html Template </title>
    @*FavIcon*@
    <link rel="shortcut icon" href="~/assets/img/favicon.ico" type="img/png">
</head>
<body>
    @*Preloader*@
    <div id="preloader">
        <div class="loader-cubes">
            <div class="loader-cube1 loader-cube"></div>
            <div class="loader-cube2 loader-cube"></div>
            <div class="loader-cube4 loader-cube"></div>
            <div class="loader-cube3 loader-cube"></div>
        </div>
    </div>
    <header>

        @*Navbar Section*@
        
        <div id="nav-all">
            <div class="container-fluid container-1600">
                <div class="navbar-container">
                    <div class="page-logo">
                        <a asp-controller="Home" asp-action="Index"><img src="~/Uploads/@Model.Setting.Logo" alt=""></a>
                    </div>
                    <div class="navbar-pages">
                        <div class="navbar-items">
                            <ul>
                                <li><a style="@(controller=="Home"?"color: #ff4a17;":"")" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a style="@(controller=="About"?"color: #ff4a17;":"")" asp-controller="About" asp-action="Index">About</a></li>
                                <li><a style="@(controller=="Service"?"color: #ff4a17;":"")" asp-controller="Service" asp-action="Index">Services</a></li>
                                <li><a style="@(controller=="Blog"?"color: #ff4a17;":"")" asp-controller="Blog" asp-action="Index">Blogs</a></li>
                                <li><a style="@(controller=="Portfolio"?"color: #ff4a17;":"")" asp-controller="Portfolio" asp-action="Index">Portfolios</a></li>
                                <li><a style="@(controller=="FAQ"?"color: #ff4a17;":"")" asp-controller="FAQ" asp-action="Index">FAQ</a></li>
                                <li><a style="@(controller=="Contact"?"color: #ff4a17;":"")" asp-controller="Contact" asp-action="Index">Contact</a></li>
                            </ul>
                        </div>
                    </div>

                    @*Responsive navbar*@

                    <div class="navbar-responsive-pages">
                        <div class="navbar-close">
                            <div class="crosswrap">
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                        <div class="menu-items">
                            <ul>
                                <li><a style="@(controller=="Home"?"color: #ff4a17;":"")" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a style="@(controller=="About"?"color: #ff4a17;":"")" asp-controller="About" asp-action="Index">About</a></li>
                                <li><a style="@(controller=="Service"?"color: #ff4a17;":"")" asp-controller="Service" asp-action="Index">Services</a></li>
                                <li><a style="@(controller=="Team"?"color: #ff4a17;":"")" asp-controller="Team" asp-action="Index">Our Team</a></li>
                                <li><a style="@(controller=="Blog"?"color: #ff4a17;":"")" asp-controller="Blog" asp-action="Index">Blogs</a></li>
                                <li><a style="@(controller=="Portfolio"?"color: #ff4a17;":"")" asp-controller="Portfolio" asp-action="Index">Portfolios</a></li>
                                <li><a style="@(controller=="FAQ"?"color: #ff4a17;":"")" asp-controller="FAQ" asp-action="Index">FAQ</a></li>
                                <li><a style="@(controller=="Contact"?"color: #ff4a17;":"")" asp-controller="Contact" asp-action="Index">Contact</a></li>
                            </ul>
                        </div>
                        <div class="navbar-button-respon">
                            <a asp-controller="Team" asp-action="Index" class="my-btn">View Our Team</a>
                        </div>
                    </div>
                    <div class="navbar-button d-flex align-items-center d-lg-block">
                        <div class="navbar-button-item">
                            <a asp-controller="Team" asp-action="Index" class="my-btn">View Our Team</a>
                        </div>
                        <div class="navbar-toggle">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main>

        @*Home Banner slider Section*@

        @if (ViewBag.Controller == "Home")
        {
            <section id="page-banner">
                <div class="owl-carousel homebanner-slider">
                    <div class="item" style="background-image: url(assets/img/banner.jpg);">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-10">
                                    <div class="banner-content">
                                        <span>business & consulting</span>
                                        <h1>
                                            Making Difference
                                            <br>
                                            Growth Your Business
                                            <br>
                                            With Modern Ideas
                                        </h1>
                                        <ul>
                                            <li><a asp-controller="Portfolio" asp-action="Index" class="my-btn">Get Started Now</a></li>
                                            <li><a asp-controller="Service" asp-action="Index" class="my-btn different-btn">Our Services</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="banner-shapes">
                            <div class="one"></div>
                            <div class="two"></div>
                            <div class="three"></div>
                            <div class="four"></div>
                        </div>
                    </div>
                    <div class="item" style="background-image: url(assets/img/banner-2.jpg);">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-10">
                                    <div class="banner-content">
                                        <span>business & consulting</span>
                                        <h1>
                                            Brighten Up Someone’s<br> Max Huber Turne
                                        </h1>
                                        <ul>
                                            <li><a asp-controller="Portfolio" asp-action="Index" class="my-btn">Get Started Now</a></li>
                                            <li><a asp-controller="Service" asp-action="Index" class="my-btn different-btn">Our Services</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="banner-shapes">
                            <div class="one"></div>
                            <div class="two"></div>
                            <div class="three"></div>
                            <div class="four"></div>
                        </div>
                    </div>
                    <div class="item" style="background-image: url(assets/img/banner-3.jpg);">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-10">
                                    <div class="banner-content">
                                        <span>business & consulting</span>
                                        <h1>
                                            Responsive Web & <br>Desktop Development Flutter
                                        </h1>
                                        <ul>
                                            <li><a asp-controller="Portfolio" asp-action="Index" class="my-btn">Get Started Now</a></li>
                                            <li><a asp-controller="Service" asp-action="Index" class="my-btn different-btn">Our Services</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="banner-shapes">
                            <div class="one"></div>
                            <div class="two"></div>
                            <div class="three"></div>
                            <div class="four"></div>
                        </div>
                    </div>
                </div>
            </section>
        }
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="footer-main">
                <div class="row">
                    <div class="col-lg-4 col-sm-5">
                        <div class="u-fade-type-left js-scroll-trigger">
                            <div class="page-info">
                                <div class="footer-logo">
                                    <img src="~/assets/img/logo-2.png" alt="">
                                </div>
                                <p>Power of choice is untrammelled & when nothing prevents our being able</p>
                                <ul>
                                    @foreach (var item in Model.Socials)
                                    {
                                        <li><a href=""><i class="@item.Icon"></i></a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8 col-sm-7">
                        <div class="u-fade-type-right js-scroll-trigger">
                            <div class="footer-subscribe">
                                <h4>Subscribe Our Newsletters</h4>
                                <div class="subscribe-div">
                                    <form id="subscribies" class="footer-subscribe-form" method="post" data-id="7">
                                        <input type="email" placeholder="Enter Your Email" name="email" required="">
                                        <button type="submit" id="sec-btn" class="my-btn" value="Subscribe">Subscribe Now</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6">
                        <div class="u-fade-type-left js-scroll-trigger">
                            <div class="footer-nav">
                                <h4>Quick Links</h4>
                                <ul>
                                    <li><a asp-controller="About" asp-action="Index">About Company</a></li>
                                    <li><a asp-controller="Blog" asp-action="Index">Latest News & Blog</a></li>
                                    <li><a asp-controller="Service" asp-action="Index">Popular Services</a></li>
                                    <li><a asp-controller="Portfolio" asp-action="Index">Our Portfolio</a></li>
                                    <li><a asp-controller="Contact" asp-action="Index">Communication</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6">
                        <div class="u-fade-type-down js-scroll-trigger">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="footer-contact">
                                        <h4>Contact Us</h4>
                                        <p>Untrammelled & nothing preven our being able</p>
                                        <ul>
                                            <li><a href="tel:@Model.Setting.Mail"><i class="far fa-phone"></i>@Model.Setting.Phone</a></li>
                                            <li><a href="mailto:@Model.Setting.Mail"><i class="far fa-envelope-open"></i>@Model.Setting.Mail</a></li>
                                            <li><i class="far fa-map-marker-alt"></i> @Model.Setting.Address</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6">
                        <div class="u-fade-type-right js-scroll-trigger">
                            <div class="footer-instagram">
                                <h4>Images of Page</h4>
                                <div class="insta-images">
                                    @foreach (var item in Model.PageImages)
                                    {
                                        <div class="insta-img" style="background-image: url('/Uploads/@item.Image');"><a href=""><i class="fab fa-instagram"></i></a></div>
                                    }
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <p class="copyright-content">
                    <span>Copy@@ <a href="@Model.Setting.CopyrightLink">Finsa</a>. Example -2020</span>
                    <span>All Right Reserved Design By Example</span>
                </p>
                <a class="back-to-top"><i class="far fa-angle-up"></i></a>
            </div>
        </div>
        <img src="~/assets/img/01 (3).png" class="footer-shape1" alt="">
        <img src="~/assets/img/02 (2).png" class="footer-shape2" alt="">
    </footer>



    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    @*Jquery*@
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    @*Slider plugin OwlCarousel*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    @*AjAx Sweet alert plugin*@
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @*Video Plugin*@
    <script src="~/assets/js/grt-youtube-popup.js"></script>
    @*Fade in, out plugin*@
    <script src="~/assets/fade-in-scroll-load/js/script.js"></script>
    @*Bootstrap*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    @*Main js*@
    <script src="~/assets/js/script.js"></script>
</body>
</html>