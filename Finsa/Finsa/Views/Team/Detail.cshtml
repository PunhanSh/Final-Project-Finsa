@model VmTeam
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Banner Section*@

<section id="uni-banner" style="background-image: url('../../Uploads/@Model.Banner.Image');">
    <div class="container">
        <div class="banner-text">
            <h1>Team Details</h1>
            <ul>
                <li>
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    Team Details
                </li>
            </ul>
        </div>
    </div>
    <div class="banner-shapes">
        <div class="shape-one"></div>
        <div class="shape-two"></div>
        <div class="shape-three"></div>
    </div>
</section>

@*team detail section*@

<section id="team-details-section">
    <div class="container">
        <div class="u-fade-type-down js-scroll-trigger">
            <div class="team-details">
                <div class="details-img">
                    <div class="details-pict">
                        <img src="~/Uploads/@Model.Team.Image" alt="">
                    </div>
                </div>
                <div class="details-content">
                    <h3>@Model.Team.Name</h3>
                    <span>@Model.Team.Profession</span>
                    <p style="margin-bottom: 20px;margin-top: 15px;">@Model.Team.Description</p>
                </div>
                <div class="details-contact">
                    <h3>Get In Touch</h3>
                    <span>Contact Me</span>
                    <ul class="communication-ul">
                        <li><a href="tel: @Model.Team.Phone" style="font-weight: 700;"><i class="far fa-phone"></i> @Model.Team.Phone</a></li>
                        <li><a href=""><i class="far fa-envelope"></i>@Model.Team.Mail</a></li>
                        <li><i class="far fa-map-marker-alt"></i>@Model.Team.Address</li>
                    </ul>
                    <ul class="social-ul">
                        @foreach (var item in Model.Team.TeamSocials)
                        {
                            <li><a href="@item.Link"><i class="@item.Icon"></i></a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>

    </div>
</section>

@*Team Detail Skill section*@

<section id="skill-bar">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-6 col-md-10">
                <div class="u-fade-type-left js-scroll-trigger">
                    <div class="skill-content">
                        <div class="skill-head">
                            <span>Company Skills</span>
                            <h2>
                                We Have Experience
                                <br>
                                For Business Planning
                            </h2>
                        </div>
                        <p>Sedut perspiciatis unde omnis iste natus error sit voluptat em accusantium doloremque laudantium, totam raperiaeaque ipsa quae ab illo inventore veritatis et quasi</p>
                    </div>
                </div>

            </div>
            <div class="col-lg-6 col-md-10">
                <div class="u-fade-type-right js-scroll-trigger">
                    <div class="skill-bars">
                        @foreach (var item in Model.Team.TeamToSkills)
                        {
                            <div class="skill-bar">
                                <div class="bar-name">
                                    <span>@item.Skill.Name</span>
                                    <span>@item.Skill.Percent%</span>
                                </div>
                                <div class="skill-bar-custom">
                                    <div class="custom-bar" style="width: @item.Skill.Percent%;" data-width="@item.Skill.Percent"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="line" style="border-top: 2px solid #e9e9e9;"></div>
</div>

@*Portfolio Section*@

<section id="project-sec">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-8">
                <div class="section-head">
                    <span>Latest Project</span>
                    <h2>We Complate Much More Latest Project</h2>
                </div>
            </div>
            <div class="col-lg-5 col-md-4">
                <div class="project-btn">
                    <a asp-controller="Portfolio" asp-action="Index" class="my-btn">View More Project</a>
                </div>
            </div>
        </div>
        <div class="u-fade-type-down js-scroll-trigger">
            <div class="row section-cards">
                @foreach (var item in Model.Projects)
                {
                    <div class="col-lg-4 col-sm-6">
                        <div class="project-card">
                            <div class="project-img">
                                <div class="project-bg-img" style="background-image: url('../../Uploads/@item.MainImage');"></div>
                            </div>
                            <div class="project-content">
                                <a style="text-decoration: none;" asp-controller="Portfolio" asp-action="Detail" asp-route-id="@item.Id"><h4>@item.Name</h4></a>
                                <p>Join us for consultatoins</p>
                                <a asp-controller="Portfolio" asp-action="Detail" asp-route-id="@item.Id"><i class="fal fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</section>
<div class="u-fade-type-down js-scroll-trigger">
    <section id="featuredby" class="featured-1">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 col-md-12">
                    <div class="owl-carousel featuredbyslider owl-theme">
                        @foreach (var item in Model.Partners)
                        {
                            <div class="item img-fluid">
                                <img src="~/Uploads/@item.Image" alt="">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>